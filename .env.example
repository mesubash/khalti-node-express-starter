NODE_ENV=development
PORT=3000

# Choose `mock` for a fully local demo flow or `live` for real Khalti sandbox/live requests.
KHALTI_MODE=mock

# Sandbox: https://dev.khalti.com/api/v2
# Production: https://khalti.com/api/v2
KHALTI_BASE_URL=https://dev.khalti.com/api/v2
KHALTI_SECRET_KEY=your_khalti_secret_key

# Merchant-facing URLs sent to Khalti during initiate.
# Set PUBLIC_BASE_URL to your public tunnel/domain. Example:
# - https://abc123.ngrok-free.app
# - https://random-subdomain.trycloudflare.com
PUBLIC_BASE_URL=http://localhost:3000
WEBSITE_URL=http://localhost:5173
CALLBACK_PATH=/api/v1/payments/callback/khalti

# Optional security hardening for the callback endpoint.
# If enabled, the callback rejects requests without a valid HMAC signature.
STRICT_CALLBACK_SIGNATURE=false

# Demo data file used by the starter.
DATA_FILE=./data/runtime.json
